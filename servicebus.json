{
	"info": {
		"_postman_id": "c57f1ed8-8a49-49d6-976f-c16d2dc9fd3e",
		"name": "Service Bus",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Send message",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"const servicebusNamespace = pm.variables.get(\"servicebusNamespace\");\r",
							"const namespaceUri = \"https://\"+servicebusNamespace+\".servicebus.windows.net\";\r",
							"const sasKeyName = pm.variables.get(\"sasKeyName\");\r",
							"const sasKey = pm.variables.get(\"sasKey\");\r",
							"\r",
							"var sasToken = createSharedAccessToken(\r",
							"    namespaceUri,\r",
							"    sasKeyName,\r",
							"    sasKey\r",
							");\r",
							"\r",
							"pm.request.headers.add({\r",
							"    key: \"authorization\",\r",
							"    value: sasToken\r",
							"});\r",
							"\r",
							"function createSharedAccessToken(resourceUri, sasKeyName, sasKey) {\r",
							"    if (!resourceUri || !sasKeyName || !sasKey) {\r",
							"        throw \"Missing required parameter\";\r",
							"    }\r",
							"    const encoded = encodeURIComponent(resourceUri);\r",
							"    const now = new Date();\r",
							"    const minute = 60;\r",
							"    const ttl = Math.round(now.getTime() / 1000) + minute;\r",
							"    const signature = encoded + '\\n' + ttl;\r",
							"    const hash = CryptoJS.HmacSHA256(signature, sasKey).toString(CryptoJS.enc.Base64);\r",
							"    return 'SharedAccessSignature sr=' + encoded + '&sig=' +\r",
							"        encodeURIComponent(hash) + '&se=' + ttl + '&skn=' + sasKeyName;\r",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/atom+xml;type=entry;charset=utf-8",
						"type": "text"
					},
					{
						"key": "",
						"value": "",
						"type": "text",
						"disabled": true
					}
				],
				"body": {
					"mode": "raw",
					"raw": "<root>\r\n   <CreditCheckStudyId>15758</CreditCheckStudyId>\r\n   <DecisionResult>Accepted</DecisionResult>\r\n</root>",
					"options": {
						"raw": {
							"language": "xml"
						}
					}
				},
				"url": {
					"raw": "https://{{servicebusNamespace}}.servicebus.windows.net/:queueName/messages",
					"protocol": "https",
					"host": [
						"{{servicebusNamespace}}",
						"servicebus",
						"windows",
						"net"
					],
					"path": [
						":queueName",
						"messages"
					],
					"variable": [
						{
							"key": "queueName",
							"value": "testqueue"
						}
					]
				}
			},
			"response": []
		}
	],
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		},
		{
			"listen": "test",
			"script": {
